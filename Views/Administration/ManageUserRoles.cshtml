﻿@using GetFitApp.AdminViewModel;

@model List<ManageUserRolesViewModel>

@{
    var userId = ViewBag.userId;
    ViewData["Title"] = "Manage User Roles";
}

<h2>@ViewData["Title"]</h2>
<hr>

<form method="post">
    <div class="card mb-3">
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-success" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary" style="width:auto">Cancle</a>
        </div>
    </div>

</form>
