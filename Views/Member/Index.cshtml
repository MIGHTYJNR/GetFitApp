<div class="container-fluid">
    <div class="text-center">
        <h3 style="color: #6610f2" class="mb-3">@ViewData["Title"]</h3>
    </div>
    <div class="row justify-content-center mb-3">
        @foreach (var fitnessClass in Model)
        {
            <div class="col-4 mb-4 position-relative">
                @if (!string.IsNullOrEmpty(fitnessClass.ImageUrl))
                {
                    <img src="@fitnessClass.ImageUrl" class="rounded float-start darker-image" alt="@fitnessClass.Name" />
                }
                else
                {
                    <img src="~/images/default-class-image.jpg" class="rounded float-start" alt="Default Image" />
                }
                <div class="image-caption align-content-center">
                    <h6>@fitnessClass.Name.ToUpper()</h6>
                    <p>@fitnessClass.Description</p>
                </div>
            </div>
        }
    </div>
</div>

